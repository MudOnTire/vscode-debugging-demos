  "version": "0.2.0",
  "configurations": [    
    {
      "type": "chrome",
      "request": "launch",
      "name": "launch chrome with file",
      "file": "${workspaceFolder}/public/index.html"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "launch chrome with url",
      "url": "http://localhost:4000",
      "webRoot": "${workspaceFolder}/public"
    },
    {
      "type": "chrome",
      "request": "attach",
      "name": "attach chrome",
      "port": 9222,
      "webRoot": "${workspaceFolder}/public"
    }
  ]
}